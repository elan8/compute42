{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Compute42",
  "version": "0.1.0",
  "identifier": "com.compute42.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Compute42",
        "width": 1024,
        "height": 768,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "frame-src": "'self'",
        "connect-src": "'self' http://127.0.0.1:* http://localhost:*",
        "img-src": "'self' data: http://127.0.0.1:* http://localhost:*"
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "app", "deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../demo": "demo"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "template": "./windows/installer.nsi"
      }
    },
    "linux": {
      "deb": {
        "files": {
          "/usr/share/applications/compute42.desktop": "./linux/template.desktop",
          "/usr/share/icons/hicolor/32x32/apps/compute42.png": "icons/32x32.png",
          "/usr/share/icons/hicolor/128x128/apps/compute42.png": "icons/128x128.png",
          "/usr/share/icons/hicolor/256x256/apps/compute42.png": "icons/256x256.png",
          "/usr/share/icons/hicolor/512x512/apps/compute42.png": "icons/512x512.png"
        }
      },
      "rpm": {
        "files": {
          "/usr/share/applications/compute42.desktop": "./linux/template.desktop",
          "/usr/share/icons/hicolor/32x32/apps/compute42.png": "icons/32x32.png",
          "/usr/share/icons/hicolor/128x128/apps/compute42.png": "icons/128x128.png",
          "/usr/share/icons/hicolor/256x256/apps/compute42.png": "icons/256x256.png",
          "/usr/share/icons/hicolor/512x512/apps/compute42.png": "icons/512x512.png"
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://www.compute42.com/.netlify/functions/update"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY4QjJEMDdDRDlDNDJEQUYKUldTdkxjVFpmTkN5YVBlNmNhNW0zZmNiVms4ZjZnTVFQR21RUGhNYksrVWR3NVZSZ2g2R1J1eCsK"
    },
    "http": {
      "active": true,
      "scope": []
    }
  }
}
